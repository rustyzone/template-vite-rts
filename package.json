{
  "name": "vite-rts-template",
  "version": "0.0.1",
  "private": true,
  "description": "Template with Vite, React, Tailwind & Supabase",
  "scripts": {
    "tailwind:dev": "npx tailwindcss -i ./src/css/input.css -o ./src/css/styling.css --watch",
    "tailwind:build": "npx tailwindcss -i ./src/css/input.css -o ./src/css/styling.css --minify",
    "build": "npm run tailwind:build && vite build",
    "check-branch": "current_branch=$(git rev-parse --abbrev-ref HEAD) && if [ $current_branch == 'main' ]; then echo 'On main branch.'; else echo 'Error: create-release command should be run on main branch.'; exit 1; fi",
    "create-release": "npm run tailwind:build && cross-env NODE_ENV_PROD=true vite build && npm run package && git commit -am \"v$(node -e \\\"console.log(require('./package.json').version)\\\")\" && npm run git-tag && git push --follow-tags",
    "dev": "npm run tailwind:dev | vite --mode development",
    "test": "jest",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:patch": "npm run check-branch && npm run version:patch && npm run create-release",
    "release:minor": "npm run check-branch && npm run version:minor && npm run create-release",
    "release:major": "npm run check-branch && npm run version:major && npm run create-release",
    "package": "zip -r releases/v$(node -e \"console.log(require('./package.json').version)\").zip dist/*",
    "build:prod": "npm run tailwind:build && cross-env NODE_ENV_PROD=true vite build",
    "git-tag": "git tag -a v$(node -p \"require('./package.json').version\") -m \"$(node -p \"require('./package.json').version\")\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.4.1",
    "localforage": "^1.10.0",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chrome": "^0.0.127",
    "@types/firefox-webext-browser": "^109.0.0",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webextension-polyfill": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "@vitejs/plugin-react": "^1.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^26.6.3",
    "jest-chrome": "^0.7.0",
    "rollup": "^2.56.3",
    "rollup-plugin-empty-dir": "^1.0.5",
    "rollup-plugin-esnext": "^0.1.0",
    "rollup-plugin-polyfill-node": "^0.11.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-zip": "^1.0.3",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.2.3",
    "vite": "^2.9.0",
    "vite-plugin-replace": "^0.1.1"
  }
}
